<ConjuntosScreen>:
    name: 'Conjuntos'
    
    BoxLayout:
        orientation: 'vertical'

        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'FONDO1.jpg'
                
    

        BoxLayout:
            orientation: 'vertical'

            ScrollView:
                size_hint: (1, 1)

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: 10
                    spacing: 10

                    Label:
                        text: 'Conjuntos'
                        size_hint_y: None
                        height: 60
                        font_size: 60
                        halign: 'center'
                        valign: 'middle'
                        text_size: self.size

                    
                    Label:

                        text: 'Diagrama de Venn'

                        size_hint_y: None

                        height: 40

                        font_size: 40

                        halign: 'center'

                        valign: 'middle'

                        text_size: self.size


                    Label:

                        text: "Un conjunto es una colección bien definida de elementos, que pueden ser números, objetos, personas, letras, etc. Por ejemplo, el conjunto de los números pares menores que 10 se denota como:\nA={2,4,6,8}"

                        font_size: 18

                        size_hint_y: None

                        height: self.texture_size[1] + 20  # Ajustar altura según el texto

                        text_size: self.width, None  # Permitir que el texto se ajuste al ancho del Label

                        halign: 'left'  # Alinear el texto a la izquierda

                        valign: 'top'  # Alinear el texto en la parte superior

                        padding: [10, 10]  # Espaciado interno


                    Label:

                        text: "Características de los conjuntos:"

                        font_size: 20

                        size_hint_y: None

                        height: self.texture_size[1] + 20


                    Label:

                        text: "- Elementos: Los objetos dentro de un conjunto. Se representan generalmente con llaves, por ejemplo: {a,b,c}."

                        font_size: 18

                        size_hint_y: None

                        height: self.texture_size[1] + 20

                        text_size: self.width, None

                        halign: 'left'

                        valign: 'top'

                        padding: [10, 10]


                    Label:

                        text: "- Notación:\n    Pertenencia: x∈A significa que x es un elemento del conjunto A.\n    No pertenencia: x∉A indica que x no pertenece a A."

                        font_size: 18

                        size_hint_y: None

                        height: self.texture_size[1] + 20

                        text_size: self.width, None

                        halign: 'left'

                        valign: 'top'

                        padding: [10, 10]


                    Label:

                        text: "- Operaciones principales:\n    Unión (A∪B): Conjunto de elementos que están en A, en B o en ambos.\n    Intersección (A∩B): Conjunto de elementos que están en ambos conjuntos.\n    Diferencia (A−B): Conjunto de elementos que están en A pero no en B.\n    Complemento (Aᶜ): Elementos que no están en A dentro de un universo dado."

                        font_size: 18

                        size_hint_y: None

                        height: self.texture_size[1] + 20

                        text_size: self.width, None

                        halign: 'left'

                        valign: 'top'

                        padding: [10, 10]

                    Image:

                        source: 'Venn1.jpg'

                        size_hint_x: 1

                        size_hint_y: None

                        height: 300

                        allow_stretch: True

                        keep_ratio: True

                    Label:

                        id: info_label  # Asignamos un ID al Label

                        size_hint_y: None

                        height: self.texture_size[1] + 20  # Ajustar altura según el texto

                        text_size: self.width, None  # Permitir que el texto se ajuste al ancho del Label

                        halign: 'left'  # Alinear el texto a la izquierda

                        valign: 'top'  # Alinear el texto en la parte superior


                    Label:
                        text: "Universo (separar por comas):"
                        size_hint_y: None
                        height: 30
                        font_size: 25

                    TextInput:
                        id: input_universo
                        size_hint_y: None
                        height: 40

                    Label:
                        text: "Conjunto A (separar por comas):"
                        size_hint_y: None
                        height: 30
                        font_size: 25

                    TextInput:
                        id: input_a
                        size_hint_y: None
                        height: 40

                    Label:
                        text: "Conjunto B (separar por comas):"
                        size_hint_y: None
                        height: 30
                        font_size: 25

                    TextInput:
                        id: input_b
                        size_hint_y: None
                        height: 40

                    BoxLayout:
                        size_hint_y: None
                        height: 50

                        Button:
                            text: 'Calcular Unión'
                            on_release: root.calcular_union()

                        Button:
                            text: 'Calcular\n Intersección'
                            on_release: root.calcular_interseccion()

                        Button:
                            text: 'Calcular Complemento\n General'
                            on_release: root.calcular_complemento_general()

                        Button:
                            text: 'Calcular\nComplemento A'
                            on_release: root.calcular_complemento_individual('A')

                        Button:
                            text: 'Calcular\n Complemento B'
                            on_release: root.calcular_complemento_individual('B')

                        Button:

                            text: 'Calcular Diferencia\n Simétrica'
                            on_release: root.calcular_diferencia_simetrica()


                    Label:
                        text: 'Resultado:'
                        size_hint_y: None
                        height: 30
                        font_size: 25

                    Label:
                        id: resultado
                        size_hint_y: None
                        height: 40
                        font_size: 25

        Button:
            text: 'Menu'
            size_hint: None, None
            size: 100, 40
            pos_hint: {'center_x': 0.5, 'bottom': 0}
            on_release: root.manager.current = 'Topics'

